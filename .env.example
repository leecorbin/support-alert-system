# Support Workflow Environment Variables
# Copy this file to .env and fill in your actual credentials

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_private_app_token_here

# Zendesk Configuration
ZENDESK_SUBDOMAIN=your_company
ZENDESK_EMAIL=your_email@company.com
ZENDESK_TOKEN=your_zendesk_api_token

# Intercom Configuration
INTERCOM_ACCESS_TOKEN=your_intercom_access_token

# Other Chat Platform APIs
# Add your chat platform credentials here
# CRISP_WEBSITE_ID=your_crisp_website_id
# DRIFT_ACCESS_TOKEN=your_drift_access_token
# LIVECHAT_LICENSE=your_livechat_license

# Custom API Endpoints
# If you have custom internal APIs for support data
# INTERNAL_TICKETS_API=https://your-internal-api.com/tickets
# INTERNAL_AGENTS_API=https://your-internal-api.com/agents
